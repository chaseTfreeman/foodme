<section class="module parallax parallax-3">
  <div class="container">
    <h1>New Recipe</h1>
<div class="form">
<%= form_for @recipe, :html => {:multipart => true} do |f| %>

<p>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :igredients %>
  <br>
  <%= f.text_area :ingredients%>
</p>

<p>
  <%= f.label :directions %>
  <br>
  <%= f.text_area :directions %>
</p>
<p>
  <%= f.label :image %>
  <br>
  <%= f.file_field :image %>
</p>
<p><h4>Choose a Box Title:</h4><br>
<%= f.select( :box_ids, Box.all.collect { |box| [box.title, box.id] } ) %>
<p>

<p>
  <%= f.submit %>
</p>
<% end %>
</div>

</div>
</section>
