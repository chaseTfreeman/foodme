<section class="module parallax parallax-3">
  <div class="container">
    <h1>New Recipe</h1>
<div class="form">
<%= form_for @recipe, :html => {:multipart => true} do |f| %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :igredients %>
  <%= f.text_field :ingredients%>
</p>
<p>
  <%= f.label :directions %>
  <%= f.text_field :directions %>
</p>
<p>
  <%= f.label :image %>
  <%= f.file_field :image %>
</p>
<%= f.select( :box_ids, Box.all.collect { |box| [box.title, box.id] } ) %>
<p>
  <%= f.submit %>
</p>
<% end %>
</div>

</div>
</section>
