
<section class="module parallax parallax-4">
  <div class="container">
    <h1>View All Recipes</h1>
  </div>
</section>

        <div class="row">
          <div id="recipes" class="transitions-enabled">
            <div class="recipe-wrapper">
              <div class="col-md-4">
                <% @recipes.each do |recipe| %>
                <div class="masonry_box">
                  <h4><%= recipe.title %></h4>
                  <%= link_to image_tag("#{recipe.image}"), recipe_path(recipe) %>
                    <div class="btn btn-primary"><%= link_to "View Recipe", recipe_path(recipe) %></div>
                  <div class="btn btn-primary"><%= link_to 'Delete', recipe_path(recipe),
                                                                method: :delete,
                                                                data: { confirm: 'Are you sure?' } %></div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
