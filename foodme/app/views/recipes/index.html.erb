
<section class="module parallax parallax-4">
  <div class="container">
    <h1>View All Recipes</h1>
  </div>
</section>
<section class="module content">
  <div class="container">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
        </section>
        <div class="row">
          <div id="recipes" class="transitions-enabled">
            <div class="recipe-wrapper">
              <div class="col-md-4">
                <% @recipes.each do |recipe| %>
                <div class="masonry_box">
                  <h2><%= recipe.title %></h2>
                  <%= link_to image_tag("#{recipe.img_url}"), recipe_path(recipe)%>

                  <a class="btn btn-primary" href="#">View</a>
                  <a class="btn btn-primary" href="#">Add to Box</a>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
